@model Category

<form method="post" asp-controller="Category" asp-action="DeletePost">
    <input asp-for="Id" type="hidden" />
    <div class="border p-3 m-4">
        <div class="row pb-2">
            <h2 class="header">
                Delete Category
            </h2>
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control " />
            <span asp-validation-for="Name"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" disabled class="form-control" />
            <span asp-validation-for="DisplayOrder"></span>
        </div>
        <button type="submit"class="btn btn-danger" style="width:150px">Delete</button>      
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
    </div>
</form>

@section Scripts
{
<partial name="_ValidationScriptsPartial"></partial>
}




